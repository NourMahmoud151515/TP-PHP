            <?php
            $query = "SELECT e.id, e.nom, e.prenom, e.email, e.date_naissance, e.image, s.designation 
                      FROM etudiants e JOIN section s ON e.section_id = s.id";

            $result = mysqli_query($conn, $query);
            while ($row = mysqli_fetch_assoc($result)) {
                echo "<tr>
                    <td>{$row['id']}</td>
                    <td><img src='assets/images/{$row['image']}' width='50'></td>
                    <td>{$row['nom']}</td>
                    <td>{$row['prenom']}</td>
